{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ppgigantus.github.io/lattice-audit-protocol/schemas/audit_pack_manifest.schema.json",
  "title": "LAP Audit Pack Manifest",
  "type": "object",
  "required": [
    "action_id",
    "evidence_hash",
    "decision_hash",
    "created_at_utc",
    "gateway_id",
    "protocol_version"
  ],
  "properties": {
    "action_id": {
      "type": "string"
    },
    "evidence_hash": {
      "type": "string"
    },
    "decision_hash": {
      "type": "string"
    },
    "created_at_utc": {
      "type": "string"
    },
    "gateway_id": {
      "type": "string"
    },
    "protocol_version": {
      "type": "string"
    },
    "canonical_json_version": {
      "type": "string",
      "description": "Canonical JSON version used for evidence hashing (v1=legacy/permissive, v2=strict).",
      "enum": [
        "v1",
        "v2"
      ]
    },
    "receipt_profile": {
      "type": "string",
      "description": "Receipt profile (v1 legacy; v2 requires decision_binding in tool receipts).",
      "enum": [
        "v1",
        "v2"
      ]
    }
  },
  "additionalProperties": true
}
