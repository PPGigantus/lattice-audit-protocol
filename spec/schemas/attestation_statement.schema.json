{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lattice-audit-protocol.dev/schemas/attestation_statement.schema.json",
  "title": "LAP Attestation Statement (Tool Invocation)",
  "type": "object",
  "required": ["_type", "subject", "predicateType", "predicate", "metadata"],
  "properties": {
    "_type": {
      "type": "string",
      "const": "https://lattice-audit-protocol.dev/attestation/v1"
    },
    "subject": {
      "type": "array",
      "minItems": 1,
      "maxItems": 1,
      "items": {
        "type": "object",
        "required": ["action_id", "receipt_id", "tool_name"],
        "properties": {
          "action_id": {"type": "string"},
          "receipt_id": {"type": "string"},
          "tool_name": {"type": "string"}
        },
        "additionalProperties": false
      }
    },
    "predicateType": {
      "type": "string",
      "const": "https://lattice-audit-protocol.dev/predicate/tool-invocation/v1"
    },
    "predicate": {
      "type": "object",
      "required": [
        "receipt_id",
        "action_id",
        "evidence_hash",
        "decision_hash",
        "token_jti",
        "sid",
        "tool_name",
        "operation",
        "params_hash",
        "decision_binding",
        "result_hash",
        "response_hash",
        "result_status",
        "invoked_at_utc",
        "completed_at_utc",
        "duration_ms",
        "prev_receipt_hash",
        "signature",
        "key_id"
      ],
      "properties": {
        "receipt_id": {"type": "string"},
        "action_id": {"type": "string"},
        "evidence_hash": {"type": "string"},
        "decision_hash": {"type": "string"},
        "token_jti": {"type": "string"},

        "sid": {"type": "string"},

        "tool_name": {"type": "string"},
        "operation": {"type": "string"},
        "params_hash": {"type": "string"},
        "decision_binding": {"type": "string"},
        "result_hash": {"type": "string"},
        "response_hash": {"type": "string"},
        "result_status": {"type": "string"},

        "invoked_at_utc": {"type": "string"},
        "completed_at_utc": {"type": "string"},
        "duration_ms": {"type": "integer"},

        "prev_receipt_hash": {"type": "string"},
        "receipt_hash": {"type": "string"},

        "signature": {"type": "string"},
        "key_id": {"type": "string"}
      },
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "required": ["created_at_utc"],
      "properties": {
        "created_at_utc": {"type": "string"},
        "gateway_id": {"type": "string"},
        "protocol_version": {"type": "string"}
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
